<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <ImageView
            android:id="@+id/iv_porson"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_android_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Person 1 "
            android:textSize="25dp"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_porson"
            app:layout_constraintStart_toEndOf="@id/iv_porson"
            app:layout_constraintTop_toTopOf="@id/iv_porson" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_porson"/>

        <ImageView
            android:id="@+id/iv_porson2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_android_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Person 2"
            android:textSize="25dp"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_porson2"
            app:layout_constraintStart_toEndOf="@id/iv_porson2"
            app:layout_constraintTop_toTopOf="@id/iv_porson2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>